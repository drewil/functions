{
	// Versions
	"manifest_version": 3,
	"version": "1.0",

	// Information
	"name": "Bookmark Search",
	"description": "Uses the chrome.bookmarks API to recommend forgotten bookmarks from the user's repository.",

	// Permissions
	"permissions": ["bookmarks", "activeTab"],

	// Actions
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png",
			"48": "images/icon-48.png",
			"128": "images/icon-128.png"
		}
	},

	// Icons
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	}
}