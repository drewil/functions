{
	"manifest_version": 3,
	"name": "bookmarks",
	"version": "1.0",
	"description": "Never forget or lose a bookmark again!",

	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},

	"background": {
		"service_worker": "scripts/service-worker.js"
	},

	"action": {
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png",
			"48": "images/icon-48.png",
			"128": "images/icon-128.png"
		}
	},

	"permissions": [
		"scripting", "activeTab",
		"bookmarks",
		"omnibox"
	],

	"content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "http://*.example.com//"
      ]
    }
  ]
}