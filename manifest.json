{
  "manifest_version": 2,
  "name": "Bookmark Extension",
  "version": "1.0",
  "description": "Never forget or lose out on your bookmarks again.",
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "Google Bookmark logo1.png"
  },
  // "icons": {
  //   "16": "icon.png",
  //   "48": "icon.png",
  //   "128": "icon.png"
  // },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
